<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane
            fx:id="dialogPane"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.economicssimulatorclient.controller.PasswordResetDialogController">

    <content>
        <GridPane hgap="10" vgap="10">
            <Label text="%pass.label.code"            GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="codeField"  promptText="%prompt.code"
                       GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="%pass.label.new_password"    GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <PasswordField fx:id="passField"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="%pass.label.repeat_password" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <PasswordField fx:id="repeatField"
                           GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label fx:id="errorLabel" textFill="#d32f2f"
                   GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
        </GridPane>
    </content>

    <buttonTypes>
        <ButtonType fx:id="okBtn" text="%pass.button.confirm" buttonData="OK_DONE"/>
        <ButtonType text="%common.cancel" buttonData="CANCEL_CLOSE"/>
    </buttonTypes>
</DialogPane>
