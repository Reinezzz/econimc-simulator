<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.economicssimulatorclient.controller.MathModelResultController"
            prefWidth="1200" prefHeight="800">

    <!-- Верхний тулбар -->
    <HBox AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
          styleClass="top-bar">
        <padding><Insets top="10" left="20" bottom="10" right="20"/></padding>
        <Button fx:id="backButton" text="Назад" styleClass="exit-button"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button fx:id="mainButton" text="Главная" styleClass="exit-button"/>
    </HBox>

    <HBox AnchorPane.topAnchor="60" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" spacing="20">
        <!-- Левая панель параметров -->
        <VBox prefWidth="340" spacing="16" styleClass="left-panel">
            <padding><Insets top="20" left="20" right="20" bottom="20"/></padding>
            <Label text="Параметры" styleClass="section-title"/>
            <ScrollPane fx:id="paramsScroll" fitToWidth="true" prefHeight="440">
                <VBox fx:id="paramsVBox" spacing="10"/>
            </ScrollPane>
            <Separator style="-fx-padding: 8 0 4 0;"/>
            <Button fx:id="editParamsButton" text="Изменить" styleClass="primary-button"/>
        </VBox>

        <Separator orientation="VERTICAL" styleClass="separator"/>

        <!-- Правая панель результата и графика -->
        <VBox spacing="28" styleClass="right-panel" VBox.vgrow="ALWAYS">
            <padding><Insets top="20" left="20" right="20" bottom="20"/></padding>
            <Label text="Результат вычислений" styleClass="page-title"/>
            <TextArea fx:id="resultArea" promptText="Результат" styleClass="text-area" prefHeight="80" editable="false"/>

            <HBox spacing="12" alignment="CENTER_LEFT">
                <Label text="График" styleClass="form-label"/>
                <ComboBox fx:id="chartTypeComboBox" prefWidth="200"/>
            </HBox>

            <!-- Здесь будет отображаться график -->
            <Pane fx:id="chartPane" minHeight="260" style="-fx-background-color: #f5f6fa; -fx-border-color: #bfc9d1;"/>

            <HBox spacing="16" alignment="CENTER_LEFT">
                <Button fx:id="aiButton" text="Ai-анализ" styleClass="primary-button"/>
                <Button fx:id="saveReportButton" text="Сохранить отчет" styleClass="primary-button"/>
                <Button fx:id="repeatButton" text="Повторить" styleClass="primary-button"/>
            </HBox>
        </VBox>
    </HBox>
</AnchorPane>
