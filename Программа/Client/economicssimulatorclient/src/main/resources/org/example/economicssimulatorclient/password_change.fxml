<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>

<StackPane xmlns="http://javafx.com/javafx/8"
           xmlns:fx="http://javafx.com/fxml/1"
           prefWidth="1920" prefHeight="1080"
           fx:controller="org.example.economicssimulatorclient.controller.PasswordChangeController">
    <!-- Подключаем CSS -->
<!--    <stylesheets>-->
<!--        <URL value="@styles.css"/>-->
<!--    </stylesheets>-->

    <!-- Серый фон -->
    <Pane styleClass="background-pane"
          prefWidth="1920" prefHeight="1080"/>



    <!-- Карточка смены пароля -->
    <VBox styleClass="change-card"
          spacing="20" alignment="CENTER">
        <!-- Заголовок -->
        <Label text="Смена пароля" styleClass="title"/>

        <Label text="Введите email аккаунта" styleClass="title" fx:id="statusLabel"/>

        <!-- email -->
        <VBox spacing="8" prefWidth="400">
            <Label text="Email" styleClass="form-label"/>
            <TextField fx:id="emailField"
                       promptText="example@mail.ru"
                       styleClass="text-field"/>
        </VBox>

        <!-- Кнопка сохранить -->
        <Button fx:id="sendCodeButton"
                text="Отправить код"
                styleClass="primary-button"
                prefWidth="200" prefHeight="40" onAction="#sendCode"/>

        <!-- Ссылка домой -->
        <HBox spacing="5" alignment="CENTER">
            <Label text="Не хотите менять пароль?" styleClass="footer-text"/>
            <Hyperlink fx:id="backLink" text="На главную" styleClass="link" onAction="#goBack"/>
        </HBox>
    </VBox>
</StackPane>
