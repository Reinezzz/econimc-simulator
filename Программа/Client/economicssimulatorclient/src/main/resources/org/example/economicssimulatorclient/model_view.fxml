<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.economicssimulatorclient.controller.ModelViewController"
            stylesheets="@model_view.css"
            styleClass="screen">

    <!-- Top bar -->
    <top>
        <VBox>
            <HBox styleClass="top-bar">
                <Button fx:id="backButton" text="Назад" styleClass="topbar-button"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="mainButton" text="Главная" styleClass="topbar-button"/>
            </HBox>
            <Separator styleClass="top-separator"/>
        </VBox>
    </top>

    <center>
        <HBox styleClass="main-content">
            <!-- Left: Параметры -->
            <ScrollPane styleClass="parameter-scroll" fitToWidth="true" prefWidth="640">
                <VBox fx:id="parameterList" styleClass="parameter-list"/>
            </ScrollPane>

            <Separator orientation="VERTICAL" styleClass="v-separator"/>

            <!-- Center: Модель -->
            <VBox styleClass="model-block" prefWidth="640">
                <Label fx:id="modelTitle" text="Модель" styleClass="model-title"/>
                <HBox styleClass="model-row">
                    <Label text="Название:" styleClass="model-label"/>
                    <Label fx:id="nameLabel" styleClass="model-value"/>
                </HBox>
                <HBox styleClass="model-row">
                    <Label text="Тип:" styleClass="model-label"/>
                    <Label fx:id="typeLabel" styleClass="model-value"/>
                </HBox>
                <Label text="Описание" styleClass="model-label"/>
                <TextArea fx:id="descriptionArea" editable="false" wrapText="true" styleClass="model-textarea"/>
                <Label fx:id="statusLabel" styleClass="status-label"/>

            </VBox>
            <Separator orientation="VERTICAL" styleClass="v-separator"/>
        </HBox>
    </center>
    <bottom>
        <VBox>
            <Separator styleClass="bottom-separator"/>
            <HBox styleClass="bottom-bar">
                <Button fx:id="addDocumentButton" text="Добавить документ" styleClass="topbar-button"/>
                <Region HBox.hgrow="ALWAYS"/>
                <HBox styleClass="bottom-center-buttons" spacing="18">
                    <Button fx:id="runButton" text="Запуск" styleClass="topbar-button"/>
                    <Button fx:id="editButton" text="Редактировать" styleClass="topbar-button"/>
                </HBox>
                <Region HBox.hgrow="ALWAYS"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>

