<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.economicssimulatorclient.controller.CreateMathModelController"
            prefWidth="1200" prefHeight="800">

    <!-- Верхний тулбар -->
    <HBox AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
          styleClass="top-bar">
        <padding><Insets top="10" left="20" bottom="10" right="20"/></padding>
        <Button fx:id="backButton" text="Назад" styleClass="exit-button"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button fx:id="mainButton" text="Главная" styleClass="exit-button"/>
    </HBox>

    <!-- Основная часть экрана -->
    <HBox AnchorPane.topAnchor="60" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" spacing="20">
        <!-- Левая панель параметров -->
        <VBox prefWidth="340" spacing="16" styleClass="left-panel">
            <padding><Insets top="20" left="20" right="20" bottom="20"/></padding>
            <Label text="Параметры" styleClass="section-title"/>
            <ScrollPane fx:id="paramsScroll" fitToWidth="true" prefHeight="540">
                <VBox fx:id="paramsVBox" spacing="10"/>
            </ScrollPane>
            <Separator style="-fx-padding: 8 0 4 0;"/>
            <Button fx:id="addParamButton" text="Добавить параметр" styleClass="add-button"/>
        </VBox>

        <!-- Вертикальный разделитель -->
        <Separator orientation="VERTICAL" styleClass="separator"/>

        <!-- Правая панель — редактирование модели -->
        <VBox spacing="18" styleClass="right-panel" VBox.vgrow="ALWAYS">
            <padding><Insets top="20" left="20" right="20" bottom="20"/></padding>
            <Label text="Математическая модель" styleClass="page-title"/>

            <VBox spacing="8">
                <Label text="Название" styleClass="form-label"/>
                <TextField fx:id="nameField" promptText="Введите название" styleClass="text-field"/>
            </VBox>

            <VBox spacing="8">
                <Label text="Тип модели" styleClass="form-label"/>
                <ComboBox fx:id="typeComboBox" promptText="Выберите тип" styleClass="text-field" />
            </VBox>

            <VBox spacing="8">
                <Label text="Формула" styleClass="form-label"/>
                <TextArea fx:id="formulaArea" promptText="Введите формулу" styleClass="text-area" prefHeight="140"/>
            </VBox>

            <Button fx:id="saveButton" text="Сохранить" styleClass="primary-button" minWidth="200"/>
        </VBox>
    </HBox>
</AnchorPane>
