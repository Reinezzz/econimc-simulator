<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.economicssimulatorclient.controller.PasswordResetDialogController">

    <content>
        <GridPane hgap="10" vgap="10" padding="20">
            <Label text="Код:"                   GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="codeField"
                       promptText="XXXXXX"
                       GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Новый пароль:"          GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <PasswordField fx:id="passwordField"
                           promptText="пароль"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Повторите пароль:"      GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <PasswordField fx:id="repeatPasswordField"
                           promptText="пароль ещё раз"
                           GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label fx:id="errorLabel"
                   textFill="#d32f2f"
                   GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
        </GridPane>
    </content>
    <buttonTypes>
        <ButtonType fx:id="okBtn"    text="Подтвердить" buttonData="OK_DONE"/>
        <ButtonType text="Отмена" buttonData="CANCEL_CLOSE"/>
    </buttonTypes>
</DialogPane>
