<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>

<StackPane xmlns="http://javafx.com/javafx/8"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.example.economicssimulatorclient.controller.RegistrationController">
    <!-- Подключаем CSS -->
<!--    <stylesheets>-->
<!--        <URL value="@styles.css"/>-->
<!--    </stylesheets>-->

    <!-- Фон -->
    <Pane styleClass="background-pane"/>

    <!-- Карточка регистрации -->
    <VBox styleClass="card"
          spacing="20" alignment="CENTER">
        <!-- Заголовок -->
        <Label text="Регистрация" styleClass="title"/>

        <!-- Поле «Email» -->
        <VBox spacing="8" prefWidth="400">
            <Label text="Email" styleClass="form-label" fx:id="statusLabel"/>
        </VBox>

        <!-- Поле «Имя» -->
        <VBox spacing="8" prefWidth="400">
            <Label text="Имя" styleClass="form-label"/>
            <TextField promptText="login123456" styleClass="text-field" fx:id="usernameField"/>
        </VBox>

        <!-- Поле «Email» -->
        <VBox spacing="8" prefWidth="400">
            <Label text="Email" styleClass="form-label"/>
            <TextField promptText="example@mail.ru" styleClass="text-field" fx:id="emailField"/>
        </VBox>

        <!-- Поле «Пароль» -->
        <VBox spacing="8" prefWidth="400">
            <Label text="Пароль" styleClass="form-label"/>
            <PasswordField promptText="password" styleClass="text-field" fx:id="passwordField"/>
        </VBox>

        <!-- Поле «Повтор пароля» -->
        <VBox spacing="8" prefWidth="400">
            <Label text="Повтор пароля" styleClass="form-label"/>
            <PasswordField promptText="password" styleClass="text-field" fx:id="repeatPasswordField"/>
        </VBox>

        <!-- Кнопка регистрации -->
        <Button fx:id="registerButton"
                text="Зарегистрироваться"
                styleClass="primary-button"
                prefWidth="240" prefHeight="40" onAction="#doRegister"/>

        <!-- Нижняя строка с ссылкой на вход -->
        <HBox spacing="5" alignment="CENTER">
            <Label text="Уже есть аккаунт?" styleClass="footer-text"/>
            <Hyperlink fx:id="loginLink" text="Войти" styleClass="link" onAction="#openLogin"/>
        </HBox>
    </VBox>
</StackPane>
