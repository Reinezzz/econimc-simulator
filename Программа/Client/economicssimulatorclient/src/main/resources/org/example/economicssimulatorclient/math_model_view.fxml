<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.economicssimulatorclient.controller.MathModelViewController"
            prefWidth="1200" prefHeight="800">

    <!-- Верхний тулбар -->
    <HBox fx:id="topBar" styleClass="top-bar"
          AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <padding><Insets top="10" left="20" bottom="10" right="20"/></padding>
        <Button fx:id="backButton" text="Назад" styleClass="exit-button" />
        <Pane HBox.hgrow="ALWAYS"/>
        <Button fx:id="mainButton" text="Главная" styleClass="exit-button" />
    </HBox>

    <!-- Основной HBox: левая панель / разделитель / правая панель -->
    <HBox AnchorPane.topAnchor="60"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0"
          AnchorPane.bottomAnchor="0"
          spacing="20">

        <!-- Левая панель со скроллом -->
        <VBox styleClass="left-panel"
              prefWidth="350"
              spacing="20">
            <padding><Insets top="20" left="20" right="20" bottom="20"/></padding>
            <Label text="Параметры" styleClass="section-title"/>
            <ScrollPane fx:id="paramsScroll" fitToWidth="true" fitToHeight="true" prefHeight="600">
                <VBox fx:id="paramsVBox" spacing="12" />
            </ScrollPane>
        </VBox>

        <!-- Вертикальный разделитель -->
        <Separator orientation="VERTICAL" styleClass="separator"/>

        <!-- Правая панель -->
        <VBox styleClass="right-panel"
              spacing="20"
              VBox.vgrow="ALWAYS">
            <padding><Insets top="20" left="20" right="20" bottom="20"/></padding>
            <Label text="Модель" styleClass="page-title"/>

            <VBox spacing="8">
                <Label text="Название" styleClass="form-label"/>
                <TextField fx:id="nameField" promptText="Название" styleClass="text-field" editable="false"/>
            </VBox>

            <VBox spacing="8">
                <Label text="Тип" styleClass="form-label"/>
                <TextField fx:id="typeField" promptText="Тип" styleClass="text-field" editable="false"/>
            </VBox>

            <VBox spacing="8">
                <Label text="Формула" styleClass="form-label"/>
                <TextArea fx:id="formulaArea" promptText="Формула" styleClass="text-area" prefHeight="140" editable="false"/>
            </VBox>

            <!-- Кнопки внизу -->
            <HBox styleClass="bottom-buttons" alignment="CENTER" spacing="20">
                <Button fx:id="runButton" text="Запустить симуляцию" styleClass="primary-button"/>
                <Button fx:id="addDocButton" text="Добавить документ" styleClass="primary-button"/>
                <Button fx:id="editButton" text="Редактировать" styleClass="primary-button"/>
            </HBox>
        </VBox>
    </HBox>
</AnchorPane>
